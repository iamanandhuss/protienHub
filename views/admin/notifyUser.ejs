<%- include('layout/adminpage_header') %>

<div class="container mx-auto bg-white p-6 rounded-lg shadow-lg w-full ml-2 mr-2 flex-row">
    <h2 class="text-2xl font-bold mb-6">Send Notification</h2>
    <form method="post" action="/notify">
      <div class="mb-4">
        <label for="notification-type" class="block text-gray-700">Notification Type</label>
        <select id="notification-type" class="mt-1 block w-full bg-gray-100 border border-gray-300 rounded-md p-2">
          <option>email</option>
          <option>SMS</option>
          <option>push notifications</option>
          
        </select>
      </div>
      <div class="mb-4">
        <label for="subject" class="block text-gray-700">Subject</label>
        <input type="text" id="subject" placeholder="Enter Subject" class="mt-1 block w-full bg-gray-100 border border-gray-300 rounded-md p-2">
      </div>
      <div class="mb-4">
        <label for="message" class="block text-gray-700">Message</label>
        <textarea id="message" placeholder="Enter your message here ..." class="mt-1 block w-full bg-gray-100 border border-gray-300 rounded-md p-2"></textarea>
      </div>
      <div class="flex justify-between">
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" >Send Notification</button>
        <button type="reset" class="bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-gray-600" onclick="window.location.href='/order_manage'">Reset</button>
      </div>
    </form>
    <%- include('layout/admin_footer') %>
  </div>
  