<%- include('layout/adminpage_header') %>
<div class="container mx-auto bg-white p-6 rounded-lg shadow-lg w-full ml-2 mr-2">
    <h2 class="text-2xl font-bold mb-8">Personal Details</h2>
    
    <%if(user){%>
        
        
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
            <label for="username" class="block font-semibold mb-2">User Name</label>
            <input type="text" id="username" value=<%=user.username.toUpperCase()%> class="w-full px-3 py-2 border border-gray-300 rounded-md" readonly>
        </div>
        <div>
            <label for="date" class="block font-semibold mb-2">Date Of Registration</label>
            <input type="text" id="date" value="<%= new
            Date(user.createdAt).toLocaleDateString('en-US') %>" class="w-full px-3 py-2 border border-gray-300 rounded-md" readonly>
        </div>
        <div>
            <label for="email" class="block font-semibold mb-2">Email</label>
            <input type="text" id="email" value="<%=user.email%>" class="w-full px-3 py-2 border border-gray-300 rounded-md" readonly>
        </div>
        <div>
            <label for="phone" class="block font-semibold mb-2">Phone</label>
            <input type="text" id="phone" value="<%=user.Phone%>" class="w-full px-3 py-2 border border-gray-300 rounded-md" readonly>
        </div>
        <div>
            <label for="orders" class="block font-semibold mb-2">Total Orders</label>
            <input type="text" id="orders" value="" class="w-full px-3 py-2 border border-gray-300 rounded-md" readonly>
        </div>
        <div class="md:col-span-3">
            <label for="address" class="block font-semibold mb-2">Address</label>
            <input type="text" id="address" value="" class="w-full px-3 py-2 border border-gray-300 rounded-md" readonly>
        </div> 
        <div>
            <label for="city" class="block font-semibold mb-2">City</label>
            <input type="text" id="city" value="" class="w-full px-3 py-2 border border-gray-300 rounded-md" readonly>
        </div>
        <div>
            <label for="pincode" class="block font-semibold mb-2">Pincode</label>
            <input type="text" id="pincode" value="" class="w-full px-3 py-2 border border-gray-300 rounded-md" readonly>
        </div>
        <div>
            <label for="total" class="block font-semibold mb-2">Total Purchase Amt</label>
            <input type="text" id="total" value="" class="w-full px-3 py-2 border border-gray-300 rounded-md" readonly>
        </div>
    </div>
    <%}%>
</div>
</div>
<%- include('layout/admin_footer') %>
