<%- include('layout/adminpage_header') %>

<div class="container mx-auto p-6 bg-gray-100 drop-shadow-2xl rounded-lg">
    <!-- categories Information -->
    <h1 class="text-2xl font-bold text-center text-gray-800 ">categories Details</h1>
    <div class="pb-4">
        <p class="text-lg font-semibold text-gray-700 flex">Categories Name</p>
        <p class="text-gray-500"><%= categories.category_name %></p>
    </div>
    <div class="pb-4">
        <p class="text-lg font-semibold text-gray-700 flex">Discription</p>
        <p class="text-gray-500"><%= categories.description %></p>
    </div>

    <div class="mb-4">
        <p class="text-lg font-semibold text-gray-700 flex">Slug</p>
        <p class="text-gray-500"><%= categories.category_slug %></p>
    </div>
    <div class="mb-4">
        <p class="text-lg font-semibold text-gray-700 flex">Parent categories</p>
        <p class="text-gray-500"><%= categories.parent_categories || "None" %></p>
    </div>
    <div class="mb-4 ">
        <p class="text-lg font-semibold text-gray-700">Status</p>
        <p class="text-gray-500"><%= categories.status %></p>
    </div>  

    <!-- Associated Products List -->
    <h2 class="text-xl font-bold text-center text-gray-800 mt-8">Associated Products</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
        <% products.forEach(product => { %>
            
            <div class="p-4 border border-gray-300 rounded bg-white shadow-md">
                <img src="/<%= product.product_image[0]%>" 
                alt="Product Image" 
                class="w-11 h-16 object-fill">
                <h3 class="text-lg font-semibold text-gray-700"><%= product.product_name %></h3>
                <p class="text-gray-600 mt-2">Price: â‚¹<%= product.price %></p>
                <p class="text-gray-500">Brand: <%= product.brand %></p>
                <!-- Link to view individual product details -->
                <a href="/admin/view_product_details/<%= product._id %>" class="text-blue-600 hover:underline">View Product</a>
            </div>
        <% }) %>
    </div>
</div>
</div>

<%- include('layout/admin_footer') %>
