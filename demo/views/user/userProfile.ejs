<%- include('profile_layout/header') %>
    

        <!-- Profile Form -->
        <main class="flex-1 p-2">
            <div class="bg-white p-6 rounded-md shadow-md">
                <h2 class="text-xl font-semibold mb-4">My Profile</h2>
                <form class="space-y-6">
                    <!-- Full Name -->
                    <div>
                        <label class="block font-medium text-gray-700">Full Name</label>
                        <div class="flex items-center space-x-4">
                            <input type="text" value=<%= user.name%> class="w-full py-2 px-4 bg-gray-300 rounded-md"
                                readonly>
                            <a href="#" class="text-orange-500">Change</a>
                        </div>
                    </div>

                    <!-- Email -->
                    <div>
                        <label class="block font-medium text-gray-700">Email</label>
                        <div class="flex items-center space-x-4">
                            <input type="email" value=<%= user.email%>
                                class="w-full py-2 px-4 bg-gray-300 rounded-md" readonly>
                            <span class="text-green-500">Verified</span>
                        </div>
                    </div>

                    <!-- Phone -->
                    <div>
                        <label class="block font-medium text-gray-700">Phone</label>
                        <div class="flex items-center space-x-4">
                            <input type="text" value=<%= user.email%> class="w-full py-2 px-4 bg-gray-300 rounded-md"
                                readonly>
                            <a href="#" class="text-orange-500">Change</a>
                        </div>
                    </div>

                    <!-- Food Preference -->
                    <div>
                        <label class="block font-medium text-gray-700">Food Preference</label>
                        <div class="flex items-center space-x-4">
                            <input type="text" value="veg" class="w-full py-2 px-4 bg-gray-300 rounded-md" readonly>
                            <a href="#" class="text-orange-500">Change</a>
                        </div>
                    </div>

                    <!-- Date of Birth -->
                    <div>
                        <label class="block font-medium text-gray-700">Date of Birth</label>
                        <div class="flex space-x-2">
                            <select class="w-1/3 py-2 px-4 bg-gray-300 rounded-md">
                                <option>Date</option>
                            </select>
                            <select class="w-1/3 py-2 px-4 bg-gray-300 rounded-md">
                                <option>Month</option>
                            </select>
                            <select class="w-1/3 py-2 px-4 bg-gray-300 rounded-md">
                                <option>Year</option>
                            </select>
                        </div>
                    </div>

                    <!-- Save Button -->
                    <div class="flex justify-end">
                        <button type="submit" class="bg-orange-500 text-white py-2 px-6 rounded-md hover:bg-orange-600">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </main>
    </div>
    <%- include('layout/footer') %>
