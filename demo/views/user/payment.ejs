<%- include('layout/cartHeader.ejs') %>

<div class="container mx-auto my-10 p-5">
    <!-- Main Section -->
    <div class="flex justify-between">
      
      <!-- Left Section (Payment Method) -->
      <div class="w-2/3 bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-5">Thank You for Your Purchase!</h2>
  
        <div class="bg-gray-100 p-5 rounded-lg">
          <h3 class="text-xl font-semibold mb-2">Select payment method</h3>
          <p class="text-gray-500 mb-4">Preferred method with secure transaction</p>
  
          <!-- PhonePay -->
          <div class="flex items-center mb-4 p-4 border rounded-lg bg-white">
            <img src="phonepay-logo.png" alt="PhonePay" class="w-10 h-10 mr-4">
            <p class="text-lg">Pay with PhonePay</p>
          </div>
  
          <!-- GooglePay with checkmark -->
          <div class="flex items-center mb-4 p-4 border-2 border-red-500 rounded-lg bg-gray-200">
            <img src="googlepay-logo.png" alt="GooglePay" class="w-10 h-10 mr-4">
            <p class="text-lg">Pay with GooglePay</p>
            <div class="ml-auto">
              <input type="checkbox" checked class="w-6 h-6 text-blue-600">
            </div>
          </div>
  
          <!-- Credit/Debit Card -->
          <div class="flex items-center p-4 border rounded-lg bg-white">
            <img src="visa-mastercard-logo.png" alt="Credit/Debit Card" class="w-10 h-10 mr-4">
            <p class="text-lg">Pay with Credit/Debit Card</p>
          </div>
        </div>
      </div>
  
      <!-- Right Section (Order Summary) -->
      <div class="w-1/3 bg-white p-6 rounded-lg shadow-md ml-6">
        <h3 class="text-xl font-semibold mb-4 text-center">Your order</h3>
  
        <!-- Product 1 -->
        <div class="flex justify-between mb-4">
          <div class="flex">
            <img src="product1.jpg" alt="Product 1" class="w-16 h-16 object-cover rounded-md">
            <div class="ml-4">
              <p class="text-lg">₹1,599 <span class="line-through text-gray-500">₹2,499</span></p>
              <p class="text-green-500">You saved ₹900</p>
              <p class="text-gray-700">QTY: 1</p>
            </div>
          </div>
        </div>
  
        <!-- Product 2 -->
        <div class="flex justify-between mb-4">
          <div class="flex">
            <img src="product2.jpg" alt="Product 2" class="w-16 h-16 object-cover rounded-md">
            <div class="ml-4">
              <p class="text-lg">₹10,799 <span class="line-through text-gray-500">₹16,999</span></p>
              <p class="text-green-500">You saved ₹6,200</p>
              <p class="text-gray-700">QTY: 1</p>
            </div>
          </div>
        </div>
  
        <!-- Order Summary -->
        <div class="mt-6">
          <div class="flex justify-between text-lg">
            <p>Sub total</p>
            <p>₹12198</p>
          </div>
          <div class="flex justify-between text-lg">
            <p>Delivery</p>
            <p>₹0</p>
          </div>
          <div class="flex justify-between text-lg">
            <p>Tax</p>
            <p>₹0</p>
          </div>
          <hr class="my-4">
          <div class="flex justify-between font-semibold text-xl">
            <p>Grand Total</p>
            <p>₹12198</p>
          </div>
        </div>
  
        <!-- Print Receipt Button -->
        <div class="mt-6">
          <button onclick="window.location.href='/orderSucess'" class="w-full flex items-center justify-center bg-green-500 text-white py-3 rounded-lg shadow-md hover:bg-green-600" onclick="window.location.href='/payment'">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-6h6v6m0 0v4H9v-4M3 7h18M5 7v2a2 2 0 002 2h10a2 2 0 002-2V7" />
            </svg>
            Print Receipt
          </button>
        </div>
      </div>
    </div>
  </div>
  
<%- include('layout/footer') %>