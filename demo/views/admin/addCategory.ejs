<%- include('layout/adminpage_header') %>

<div class="container mx-auto p-6  bg-gray-100 drop-shadow-2xl rounded-lg">
    <h1 class="text-2xl font-bold text-center text-gray-800">Manage Protein Categories</h1>
    <p class="text-center text-gray-600 mb-6">Create, Edit, and Organize Categories for Protein Products</p>
    
    <form action="/add_category" method="POST">
        <h2 class="text-xl font-semibold text-gray-700 mb-4">Create/Edit Category</h2>

        <!-- Category Name and Category Slug -->
        <div class="grid grid-cols-2 gap-4 mb-4">
            <div>
                <label class="block text-gray-700 font-semibold mb-2">Category Name</label>
                <input name="category_name" type="text" class="w-full p-2 border border-gray-300 rounded" placeholder="Category Name">
            </div>
            <div>
                <label class="block text-gray-700 font-semibold mb-2">Category Slug</label>
                <input name="category_slug" type="text" class="w-full p-2 border border-gray-300 rounded" placeholder="Category Slug">
            </div>
        </div>

        <!-- Description -->
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2">Description</label>
            <textarea name="category_description" class="w-full p-2 border border-gray-300 rounded" rows="4" placeholder="Enter category description"></textarea>
        </div>

        <!-- Parent Category and Status -->
        <div class="grid grid-cols-2 gap-4 mb-4">
            <div>
                <label class="block text-gray-700 font-semibold mb-2">Parent Category</label>
                <select name="parent_category" class="w-full p-2 border border-gray-300 rounded">
                    <option value="whey">Whey Protein</option>
                    <option value="casein">Casein Protein</option>
                    <option value="vegan">Vegan Protein</option>
                </select>
            </div>
            <div>
                <label class="block text-gray-700 font-semibold mb-2">Status</label>
                <select name="status" class="w-full p-2 border border-gray-300 rounded">
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
            </div>
        </div>

        <!-- Category Image -->
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2">Category Image</label>
            <input name="category_img" type="file" class="w-full p-2 border border-gray-300 rounded">
        </div> 

        <!-- Buttons -->
        <div class="flex justify-between">
            <button type="submit" class="px-6 py-2 bg-blue-600 text-white font-semibold rounded hover:bg-blue-700">SAVE</button>
            <button onclick="window.location.href='/view_categories'" type="button" class="px-6 py-2 bg-red-600 text-white font-semibold rounded hover:bg-red-700">DELETE</button>
        </div>
    </form>
</div>
  </div>
    <%- include('layout/admin_footer') %>
  </div>